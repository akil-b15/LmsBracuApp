<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/skyblue_background1"
    android:padding="20dp"
    tools:context=".ViewSubmittedActivity">

    <TextView
        android:id="@+id/assignment_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:text="Submitted Assignment"
        android:textSize="26sp"
        android:textColor="@color/colorPrimaryDark"
        />

    <ListView
        android:id="@+id/mySubmittedAssignmentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_below="@+id/assignment_txt">



    </ListView>

</RelativeLayout>